datasource db {
    provider    = "mysql"
    url         = env("DB_URL")
}

generator client {
    provider    = "prisma-client-js"
}

model Category {
    id                  Int         @id @default(autoincrement())
    slug                String      @unique
    title               String
    shortDescription    String      @db.VarChar(128)

    skills              CategoriesOnSkills[]
}

model Etablissement {
    id          Int         @id @default(autoincrement())
    slug        String      @unique
    name        String
    siteUrl     String
    type        EtablissementType
    projects    Project[]
}

enum EtablissementType {
    ECOLE
    ENTREPRISE
    COLLECTIF
}

model Project {
    id                  Int         @id @default(autoincrement())
    slug                String      @unique
    title               String
    description         Json
    shortDescription    String      @db.VarChar(128)
    imageUrl            String
    gitUrl              String
    hostUrl             String
    date                DateTime    @db.Date
    isActive            Boolean?    @default(false)
    type                ProjectType @default(PERSO)    

    etablissement       Etablissement?  @relation(fields: [etablissementId], references: [id])
    etablissementId     Int?         
 
    skills              ProjectsOnSkills[]
}

enum ProjectType {
    PERSO
    PRO
    UNIV
}

model Skill {
    id          Int         @id @default(autoincrement())
    slug        String      @unique
    title       String
    logoUrl     String

    level       SkillLevel?  @relation(fields: [levelId], references: [id])
    levelId     Int?

    categories  CategoriesOnSkills[]
    projects    ProjectsOnSkills[]
}

model SkillLevel {
    id      Int     @id @default(autoincrement())
    slug    String  @unique
    label   String
    skills  Skill[]
}

model CategoriesOnSkills {
    category    Category    @relation(fields: [categoryId], references: [id])
    categoryId  Int
    skill       Skill       @relation(fields: [skillId], references: [id])
    skillId     Int

    @@id([categoryId, skillId])
}

model ProjectsOnSkills {
    project     Project     @relation(fields: [projectId], references: [id])
    projectId   Int
    skill       Skill       @relation(fields: [skillId], references: [id])
    skillId     Int

    @@id([projectId, skillId])
}

